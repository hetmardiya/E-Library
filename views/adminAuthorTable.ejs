<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Author Management - Libretto</title>
    <style>
        :root {
            --primary: #2c5282;
            --secondary: #f8f9fa;
            --accent: #805ad5;
            --danger: #e53e3e;
            --text: #2d3748;
            --shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: var(--shadow);
        }

        h1 {
            color: var(--primary);
            margin-bottom: 2rem;
            text-align: center;
        }

        .authors-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 2rem;
        }

        .authors-table th,
        .authors-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #e2e8f0;
        }

        .authors-table th {
            background: var(--primary);
            color: white;
        }

        .authors-table tr:hover {
            background: var(--secondary);
        }

        .delete-btn {
            background: var(--danger);
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .delete-btn:hover {
            background: #c53030;
        }

        .back-btn {
            display: inline-block;
            background: var(--primary);
            color: white;
            padding: 0.5rem 1rem;
            text-decoration: none;
            border-radius: 4px;
            margin-bottom: 1rem;
        }

        .success-message {
            background: #48bb78;
            color: white;
            padding: 1rem;
            border-radius: 4px;
            margin-bottom: 1rem;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/admin/adminDashboard" class="back-btn">‚Üê Back to Dashboard</a>
        <h1>Author Management</h1>
        
        <div id="successMessage" class="success-message"></div>

        <table class="authors-table">
            <thead>
                <tr>
                    <th>Profile</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="authorsTableBody">
                <% authors.forEach(author => { %>
                    <tr>
                        <td>
                            <% if(author.picture) { %>
                                <img src="data:image/jpeg;base64,<%= author.picture.toString('base64') %>" 
                                     alt="<%= author.fname %>"
                                     style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;">
                            <% } else { %>
                                <div style="width: 50px; height: 50px; border-radius: 50%; background: #e2e8f0; display: flex; align-items: center; justify-content: center;">
                                    <%= author.fname[0] %>
                                </div>
                            <% } %>
                        </td>
                        <td><%= author.fname %> <%= author.lname %></td>
                        <td><%= author.email %></td>
                        <td><%= author.phoneNumber %></td>
                        <td><%= author.address %></td>
                        <td>
                            <button class="delete-btn" onclick="deleteAuthor('<%= author._id %>')">Delete</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        async function deleteAuthor(authorId) {
            if (confirm('Are you sure you want to delete this author?')) {
                try {
                    const response = await fetch(`/admin/delete-author/${authorId}`, {
                        method: 'DELETE'
                    });

                    if (response.ok) {
                        // Remove the row from table
                        const row = document.querySelector(`button[onclick="deleteAuthor('${authorId}')"]`).closest('tr');
                        row.remove();

                        // Show success message
                        const successMessage = document.getElementById('successMessage');
                        successMessage.textContent = 'Author deleted successfully';
                        successMessage.style.display = 'block';
                        setTimeout(() => {
                            successMessage.style.display = 'none';
                        }, 3000);
                    } else {
                        alert('Failed to delete author');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error deleting author');
                }
            }
        }
    </script>
</body>
</html>