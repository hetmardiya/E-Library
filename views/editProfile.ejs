<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - Libretto</title>
    <style>
        :root {
            --primary: #2c5282;
            --secondary: #f8f9fa;
            --accent: #805ad5;
            --text: #2d3748;
            --shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
            --danger: #e53e3e;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: var(--shadow);
        }

        h1 {
            color: var(--primary);
            margin-bottom: 2rem;
            text-align: center;
            font-size: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--text);
            font-weight: 500;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 0.8rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            border-color: var(--accent);
            outline: none;
            box-shadow: 0 0 0 3px rgba(128, 90, 213, 0.1);
        }

        .profile-preview {
            width: 150px;
            height: 150px;
            margin: 1rem auto;
            border-radius: 50%;
            overflow: hidden;
            border: 4px solid var(--accent);
        }

        .profile-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .file-input-container {
            text-align: center;
            margin-top: 1rem;
        }

        .update-btn {
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            color: white;
            width: 100%;
            padding: 1rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .update-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .danger-zone {
            margin-top: 3rem;
            padding: 2rem;
            background: #fff5f5;
            border-radius: 12px;
            border: 2px dashed var(--danger);
        }

        .danger-zone h2 {
            color: var(--danger);
            margin-bottom: 1rem;
            font-size: 1.5rem;
        }

        .delete-btn {
            background: var(--danger);
            color: white;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .delete-btn:hover {
            background: #c53030;
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .container {
                padding: 1.5rem;
                margin: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Profile</h1>
        <form action="/reader/update-profile" method="POST" enctype="multipart/form-data">
            <div class="profile-preview">
                <img src="data:image/jpeg;base64,<%= reader.picture.toString('base64') %>" 
                     alt="Current Profile">
            </div>

            <div class="file-input-container">
                <label for="picture" class="file-label">Change Profile Picture</label>
                <input type="file" id="picture" name="picture" accept="image/*" style="display: none">
            </div>

            <div class="form-group">
                <label>First Name</label>
                <input type="text" name="fname" value="<%= reader.fname %>" required>
            </div>

            <div class="form-group">
                <label>Last Name</label>
                <input type="text" name="lname" value="<%= reader.lname %>" required>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" value="<%= reader.email %>" required>
            </div>

            <div class="form-group">
                <label>Phone Number</label>
                <input type="tel" name="phoneNumber" value="<%= reader.phoneNumber %>" required>
            </div>

            <div class="form-group">
                <label>Address</label>
                <textarea name="address" required rows="3"><%= reader.address %></textarea>
            </div>

            <button type="submit" class="update-btn">Update Profile</button>
        </form>
    </div>

    <script>
        // Handle file input click
        document.querySelector('.file-label').addEventListener('click', () => {
            document.querySelector('#picture').click();
        });

        // Preview selected image
        document.querySelector('#picture').addEventListener('change', function(e) {
            if (this.files && this.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.querySelector('.profile-preview img').src = e.target.result;
                };
                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
</body>
</html>
