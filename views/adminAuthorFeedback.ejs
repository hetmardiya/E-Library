<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Author Feedbacks - Libretto</title>
    <style>
        :root {
            --primary: #2c5282;
            --secondary: #f8f9fa;
            --accent: #805ad5;
            --danger: #e53e3e;
            --text: #2d3748;
            --shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: var(--shadow);
        }

        h1 {
            color: var(--primary);
            margin-bottom: 2rem;
            text-align: center;
        }

        .feedback-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 2rem;
        }

        .feedback-table th,
        .feedback-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #e2e8f0;
        }

        .feedback-table th {
            background: var(--primary);
            color: white;
        }

        .feedback-table tr:hover {
            background: var(--secondary);
        }

        .feedback-message {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .feedback-date {
            color: #666;
            font-size: 0.9rem;
        }

        .view-more-btn {
            background: var(--accent);
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 0.5rem;
        }

        .delete-btn {
            background: var(--danger);
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .back-btn {
            display: inline-block;
            background: var(--primary);
            color: white;
            padding: 0.5rem 1rem;
            text-decoration: none;
            border-radius: 4px;
            margin-bottom: 1rem;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background: white;
            padding: 2rem;
            border-radius: 8px;
            width: 90%;
            max-width: 600px;
            position: relative;
        }

        .modal-content h2 {
            color: var(--primary);
            margin-bottom: 1rem;
        }

        .modal-content p {
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .modal-content button {
            background: var(--primary);
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .success-message {
            background: #48bb78;
            color: white;
            padding: 1rem;
            border-radius: 4px;
            margin-bottom: 1rem;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/admin/adminDashboard" class="back-btn">‚Üê Back to Dashboard</a>
        <h1>Author Feedbacks</h1>
        
        <div id="successMessage" class="success-message"></div>

        <table class="feedback-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% feedbacks.forEach((feedback, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= feedback.name %></td>
                        <td><%= feedback.email %></td>
                        <td class="feedback-message"><%= feedback.message %></td>
                        <td class="feedback-date">
                            <%= new Date(feedback.createdAt).toLocaleDateString() %>
                        </td>
                        <td>
                            <button class="view-more-btn" onclick="viewFeedback('<%= feedback.message %>')">View</button>
                            <button class="delete-btn" onclick="deleteFeedback('<%= feedback._id %>')">Delete</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div id="feedbackModal" class="modal">
        <div class="modal-content">
            <h2>Feedback Message</h2>
            <p id="modalMessage"></p>
            <button onclick="closeModal()">Close</button>
        </div>
    </div>

    <script>
        function viewFeedback(message) {
            document.getElementById('modalMessage').textContent = message;
            document.getElementById('feedbackModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('feedbackModal').style.display = 'none';
        }

        async function deleteFeedback(id) {
            if (confirm('Are you sure you want to delete this feedback?')) {
                try {
                    const response = await fetch(`/admin/delete-feedback/${id}`, {
                        method: 'DELETE'
                    });

                    if (response.ok) {
                        const row = document.querySelector(`button[onclick="deleteFeedback('${id}')"]`).closest('tr');
                        row.remove();
                    } else {
                        alert('Failed to delete feedback');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error deleting feedback');
                }
            }
        }
    </script>
</body>
</html>
